<Window x:Name="playerWindow" x:Class="Assignment7_MiniGolf.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment7_MiniGolf"
        mc:Ignorable="d"
        Title="Enter your Name" Height="158" Width="315" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Topmost="True" Activated="playerWindow_Activated">
    <Grid>
        <TextBox x:Name="txtPlayerName" HorizontalAlignment="Center" Height="23" Margin="0,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" MaxLength="15"/>
        <Button x:Name="btnOk" Content="OK" HorizontalAlignment="Left" Margin="203,79,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="btnOk_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="31,79,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" />

    </Grid>
</Window>
